#:import CustomGauge custom_gauge.CustomGauge

<MainScreen>:
    name: 'main'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        Label:
            text: "Vehicle RMHS"
            font_size: '24sp'
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(10)

            CustomGauge:
                id: rpm_gauge
                size_hint: (0.5, 1)
                min: 0
                max: 8000
                value: 0
                units: "RPM"

            CustomGauge:
                id: speed_gauge
                size_hint: (0.5, 1)
                min: 0
                max: 200
                value: 0
                units: "km/h"
